<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="ToolbarColoredWhite" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="BottomNavigation" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/white_grey_border_top</item>
        <item name="itemIconTint">@drawable/bottombar_selector</item>
        <item name="itemTextColor">@drawable/bottombar_selector</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="RaiseButtonDark" parent="Theme.AppCompat.Light">
        <item name="android:bottomLeftRadius">18dp</item>
        <item name="android:bottomRightRadius">18dp</item>
        <item name="android:topRightRadius">18dp</item>
        <item name="android:topLeftRadius">18dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RaiseButtonRed" parent="Theme.AppCompat.Light">
        <item name="android:bottomLeftRadius">18dp</item>
        <item name="android:bottomRightRadius">18dp</item>
        <item name="android:topRightRadius">18dp</item>
        <item name="android:topLeftRadius">18dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="colorButtonNormal">@color/dark_red</item>
        <item name="colorControlHighlight">@color/light_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:bottomLeftRadius">18dp</item>
        <item name="android:bottomRightRadius">18dp</item>
        <item name="android:topRightRadius">18dp</item>
        <item name="android:topLeftRadius">18dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="colorButtonNormal">@color/colorFacebook</item>
        <item name="colorControlHighlight">@color/colorFacebookDark</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/editText_textsize_login</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text_input_size</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorHintInverse">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">@dimen/text_input_size</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorHintInverse">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToastSync">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/quicksand_medium</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/grey</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_sync</item>
        <item name="stRadius">24dp</item>
    </style>

    <style name="ToastSuccess">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/quicksand_medium</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/green</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_checked</item>
        <item name="stRadius">24dp</item>
    </style>

    <style name="ToastInfo">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/quicksand_medium</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/colorAccent</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_warning</item>
        <item name="stRadius">24dp</item>
    </style>

    <style name="ToastError">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/quicksand_medium</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_warning</item>
        <item name="stRadius">24dp</item>
    </style>

</resources>
